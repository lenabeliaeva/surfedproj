<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SurfEdMemes" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/inactive</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundBrighter</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
    </style>

    <style name="Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">@color/background</item>
    </style>
    
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/backgroundBrighter</item>
    </style>
</resources>